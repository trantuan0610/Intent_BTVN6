<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="10dp"
    android:id="@+id/laout_item">
<ImageView
    android:id="@+id/imgview1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/folder"
    android:layout_centerVertical="true"
    android:layout_margin="10dp"
    />
    <TextView
        android:id="@+id/titleThuMuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tin tức thời sự"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_toRightOf="@+id/imgview1"/>
    <TextView
        android:id="@+id/motaThuMuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng hợp các tin tức nóng hổi nhất cả nước,....."
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/imgview1"
        android:layout_below="@+id/titleThuMuc"/>



</RelativeLayout>